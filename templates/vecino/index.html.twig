{% extends 'base.html.twig' %}
{% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/vecino.css') }}">
{% endblock %}
{% block title %} Vecinos {% endblock %}

{% block body %}
<h1>Vecinos de {{localidad}}</h1>
<div id="vecinos"> 
    {% for row in vecinos|batch(6) %}
    <div class="row">
        {% for vecino in row %} 
            <div class="col-sm-2">
                <div class="card h-100">
                    <div>
                        <img class="card-img-top" src="{{ asset(ruta_imagenes ~ vecino.imagen.nombre) }}" alt="Imagen vecino">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{vecino.apellido1|capitalize}} {{vecino.apellido2|capitalize}}, {{ vecino.nombre|capitalize}}</h5>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    {% endfor %}
</div>
{% endblock %}
