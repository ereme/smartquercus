{% extends 'base.html.twig' %}

{% block title %}Plaga index{% endblock %}

{% block body %}
    <h1>Plaga index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Cultivos</th>                
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for plaga in plagas %}
            <tr>
                <td>{{ plaga.id }}</td>
                <td>{{ plaga.nombre }}</td>
                    <td>
                        {% for c in plaga.cultivos %}
                            {{ c.nombre }}<br>
                        {% endfor %}
                    </td>
                <td>
                    <a href="{{ path('plaga_show', {'id': plaga.id}) }}">show</a>
                    <a href="{{ path('plaga_edit', {'id': plaga.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('plaga_new') }}">Create new</a>
{% endblock %}
