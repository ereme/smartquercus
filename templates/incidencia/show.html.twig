{% extends 'base.html.twig' %}

{% block title %}Incidencia{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('build/incidencias-css.css') }}">{% endblock %}


{% block body %}
    <h1>Incidencia</h1>
    <div class="container" id="incidencia-vista">
        <div class="row">
            <div class="col-4">
                <!-- Slider -->
                    <img src="/imagen/arbol.jpg" class="img-fluid" alt="Responsive image">
                <!-- End Slider --> 
            </div>
            <div class="col-6">
                
                <div class="card">    
                    <div class="card-body">
                        <span class="badge badge-{{incidencia.ColorEstado}}">{{incidencia.estado}}</span>
                        <h6 class="card-title">
                            {{ incidencia.fecha ? incidencia.fecha|date('Y-m-d') }}
                        </h6>
                        <div class="descripcion">
                            <p class="card-text">{{ incidencia.descripcion }}</p>
                        </div> 
                        <a href="{{ path('incidencia_index') }}" class="card-link">Volver a lista</a>
                        
                            <a href="{{ path('incidencia_edit', {'id': incidencia.id }) }}" class="card-link">
                                Editar
                            </a>
                        
                    </div>    
                </div>
                
            </div>
        </div>
    </div>
    
{% endblock %}
