{% extends 'base.html.twig' %}


{% block title %}Opina{% endblock %}
    
{% block stylesheets %}
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css" crossorigin="anonymous">
        
        <link rel="stylesheet" href="{{ asset('build/opina.css') }}">
            
{% endblock %}



{% block body %}
    <h1>Opina</h1>

    {% if is_granted('ROLE_AYTO') %}

        <a href="{{ path('opina_new') }}">Crea una nueva opini√≥n</a>

    {% endif %}

    <div class="container-fluid">
        {% for row in opinas|batch(3) %}
            <div class="row">
                {% for opina in row %}
                    <div id="opina" class="col-sm-4">
                        <div class="card">
                            <p>
                            <img class="card-img-top" src="{{ asset(ruta_imagenes ~ opina.imagen.nombre) }}" alt="Card image cap" width="20">
                            </p>
                            <div class="card-body">
                                <div id = "pregunta" class="card-text">
                                    <p>
                                    <a href="{{ path('opina_show', {'id': opina.id}) }}">{{ opina.pregunta }}</a>
                                    </p>
                                </div>
                                

                                <div class="progress">
                                    <i class="far fa-thumbs-up"></i> <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: {{ opina.PorcentajeFavor }}%" aria-valuenow="{{ opina.PorcentajeFavor }}" aria-valuemin="0" aria-valuemax="100"><span>{{ opina.PorcentajeFavor }} %</span></div>
                                </div>
                                <br>
                                <div class="progress">
                                    <i class="far fa-thumbs-down"></i> <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: {{ opina.PorcentajeContra }}%" aria-valuenow="{{ opina.PorcentajeContra }}" aria-valuemin="0" aria-valuemax="100"><span>{{ opina.PorcentajeContra }} %</span></div>
                                </div>
                                <br>
                                <p>
                                    <input type="hidden" value="{{ opina.id }}">
                                    {% if is_granted('ROLE_VECINO') %}
                                        {% if date(opina.fechahoralimite) > date('-1days') %}
                                            <button type="button" class="btn btn-outline-success botonopina" valor="F">A favor</button>
                                            <button type="button" class="btn btn-outline-danger botonopina" valor="C">En contra</button>
                                        {% endif %}

                                    {% elseif is_granted('ROLE_AYTO') %}

                                         <div class="container">

                                            <table id="mostrar" class="table">
                                                <tbody>
                                                    <tr>
                                                        <th>Votos a favor</th>
                                                        <td>{{ opina.votosfavor }}</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Votos en contra</th>
                                                        <td>{{ opina.votoscontra }}</td>
                                                    </tr>
                                                </tbody>
                                            </table>   
                                        </div>

                                {% endif %}

                                    
                                </p>
                                <p id="fecha">Tienes de fecha hasta: {{ opina.fechahoralimite ? opina.fechahoralimite|date('Y-m-d') : '' }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>

    
    


    
{% endblock %}

{% block javascripts %}
   
    {{ parent() }}

    <script src="{{ asset('build/opinajs.js') }}"></script>
{% endblock %}
