{% extends 'base.html.twig' %}

{% block title %}Saludables{% endblock %}

  {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/salud.css') }}">
  {% endblock %}

{% block body %}

  <div class="container-fluid">
    
    {% if is_granted('ROLE_ADMIN') %} 
      <div class="row">
        <div class="col-md-6">
          <h3 class="titulo_edit">Hábitos saludables</h3>
        </div>
        <div class="col-md-6">
          <a id="nuevosalud" class="btn btn-primary" href="{{ path('salud_new') }}">Nuevo artículo</a>
        </div>   
      
    {% endif %} 

    {% for row in saluds|batch(3) %}
      <div class="row">
        {% for salud in row %}
          <div  class="col-sm-4">
            <div class="card h-100">
              <a class="salud1" href="{{salud.id}}">
                  <img class="card-img-top imgtodas" src="{{ asset(ruta_imagenes ~ salud.imagen.nombre) }}" alt="Card image cap">
                <div class="card-body">
                  <h5 class="card-title">{{ salud.titulo}}</h5></a>        
                  <div class="card-text">
                    <p class="texto_card">{{ salud.texto|slice(0, 145) }}</p>
                    <p class="final">{{ salud.fechahora ? salud.fechahora|date('d/m/Y') : '' }}</p> 
                  </div>                            
                </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <br>
      <br>
    {% endfor %}
  </div>      

{% endblock %}


{% block javascripts %}
    {{ parent() }} 
    <script src="{{ asset('build/saludjs.js') }}"></script>            
{% endblock %}


