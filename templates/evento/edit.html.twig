{% extends 'base.html.twig' %}

{% block stylesheets %}
  {{ encore_entry_link_tags('evento') }}
{% endblock %}

{% block title %}Edit Eventos{% endblock %}

{% block body %}
    <div class="container container-fluid edit_even"> 
      <h3 class="titulo_edit">Editor de evento</h3> 
      {# include('evento/_delete_form.html.twig') #} 
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-3">
          <img class="card-img-top" src="{{ asset(evento.imagen.nombre, 'usuarios') }}" alt="Card image cap">
          <a class="eventoicon" href="{{ path('evento_show', {'id': evento.id}) }}"><i class="fas fa-arrow-circle-left"></i></a>                              
        </div>
        <div class="col-xs-12 col-sm-6 col-md-9"> 
          {{ include('evento/_form.html.twig') }}                 
        </div>
      </div>    
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}  
    <script src="{{ asset('build/eventojs.js') }}"></script>            
{% endblock %}
