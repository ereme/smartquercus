{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{asset('build/evento.css')}}">
{% endblock %}

{% block title %}Eventos{% endblock %}

{% block body %}

    <div class="container container-fluid">
        

    <div class="container container-fluid">
        <div class="row">
            <div class="col-md-3">
                 <img src="{{ asset(ruta_imagenes ~ evento.imagen.nombre) }}" alt="Card image cap" width="100%"> 
                <div class="iconos_evento"> 
                    <a id="eventoicon" href="{{ path('evento_index') }}"><i class="fas fa-arrow-circle-left"></i></a>
                     {% if is_granted('ROLE_AYTO') %}            
                         <a id="eventoicon" href="{{ path('evento_edit', {'id': evento.id}) }}"><i class="far fa-edit"></i></a>        
                    {% endif %}  
                   
                </div>                               
            </div>         
            <div class="col-sm-9">
               <h2 >{{ evento.titular }}</h2>
               <p class="texto_show"> {{ evento.texto }}</p>
            
            </div>
             {% if is_granted('ROLE_AYTO') %}            
                <a class="icono_borrar">{{ include('evento/_delete_form.html.twig') }}</a>
            {% endif %}
         </div>       
           
          
    </div>
{% endblock %}
