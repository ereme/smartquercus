{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ encore_entry_link_tags('evento') }}
{% endblock %}

{% block title %}Eventos{% endblock %}

{% block body %}
    <div class="container container-fluid show_even">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-3">
                <img src="{{ asset(evento.imagen.nombre, 'usuarios') }}" alt="Card image cap" width="100%"> 
                <div class="iconos_evento"> 
                    <a class="eventoicon" href="{{ path('evento_index') }}"><i class="fas fa-arrow-circle-left"></i></a>
                    {% if is_granted('ROLE_AYTO') %}            
                        <a class="eventoicon" href="{{ path('evento_edit', {'id': evento.id}) }}"><i class="far fa-edit"></i></a>        
                    {% endif %}                    
                </div>                               
            </div>         
            <div class="col-xs-12 col-sm-6 col-md-9">
               <h3>{{ evento.titular }}</h3>
               <p class="texto_show"> {{ evento.texto }}</p>            
            </div>
             {% if is_granted('ROLE_AYTO') %}            
                <a class="icono_borrar">{{ include('evento/_delete_form.html.twig') }}</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
