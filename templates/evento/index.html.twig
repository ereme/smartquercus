{% extends 'base.html.twig' %}

{% block stylesheets %}


<link rel="stylesheet" href="{{asset('build/evento.css')}}">




{% endblock %}

{% block title %}evento index{% endblock %}

{% block body %}
    <div class="container-fluid">
  <h1>Eventos</h1>
  {% for row in evento|batch(3) %}
    <div class="row">
      {% for evento in row %}
        <div  class="col-sm-4">
          <div class="card">
            <a href="{{evento.id}}">
              <img class="card-img-top" src="{{ asset(ruta_imagenes ~ evento.imagen.nombre) }}" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title">{{ evento.titular}}</h5></a>        
                <div class="card-text">
                  <p class="card-text">{{ evento.texto|slice(0, 120) }}</p>
                </div>
                <div class="final">
                  
                  
                  <p id="fecha"><i class="fas fa-clock"></i>   {{ evento.fechahora ? evento.fechahora|date('d-m-Y') : '' }}</p>

                </div>                             
              </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <br>
    <br>
  {% endfor %}
</div>


    <a href="{{ path('evento_new') }}">Nuevo evento</a>   


{% endblock %}
