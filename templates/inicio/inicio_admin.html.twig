{% extends 'base.html.twig' %}

{% block title %}Administrador{% endblock %}

{% block body %}

<div class="container-fluid contenedor">
	<h2 style="color:#5499C7 ">PANEL DE GESTIÓN DEL ADMINISTRADOR</h2>
	<br>
	<div class="card-group"style="margin-top:50px;">
	    <div class="col-md-9">

             <!-- Bloque 1 Incidencias-->
			    <div class="row">
			       <div class="col">
			  	        <div class="card  mb-2" >
						  <div class="card-body">
						    <h3 class="card-title">Lista de Incidencias</h3>
						    <p class="card-text">
						    	<!-- Card Incidencia-->
						       <div class="container" >
										  {% for row in incidencias|batch(4) %}
									            <div class="row">
									                {% for incidencia in incidencias %}
                                                        <div  class="col-sm-3" >
										                    <a href="{{ path('incidencia', {'id': incidencia.id }) }}">
										                        <div class="card border-primary  mb-2" style="width: 12rem;">
										                            <!-- Slider -->
										                            <img class="img-fluid" src="/imagen/bache.jpg" alt="First slide">
										                            <!-- End Slider -->
										                            <div class="card-body">
										                                <h6><small class="card-title">Fecha: {{ incidencia.fecha|date('Y-m-d') }}</small></h6>
										                                <span class="badge badge-{{incidencia.ColorEstado}}">
										                                    {{incidencia.estado}}
										                                </span>      
										                            </div>
										                        </div>
										                    </a>
														</div>
										                {% endfor %}
									            </div>
		                                  {% endfor %}
	                                </div>
						     </p>
						    <a href="{{ path('incidencia_index') }}" class="card-link">Ir a incidencias</a>
						  </div>
					    </div>
			        </div>
			    </div>
                 <!--División de Bloque-->
			    <div class="w-100"><br></div>
                 <!-- Bloque 2 Opinion-->
			    <div class="row">
			       <div class="col">
			  	       <div class="card r mb-2" >
						  <div class="card-body">
						    <h3 class="card-title"> Listado de opiniones</h3>
							    <p class="card-text">
							     <!-- Card Opinion-->	
	                               <div class="container">
										  {% for row in opinas|batch(4) %}
									            <div class="row">
									                {% for opina in row %}
													<div  class="col-sm-3">
									                    <div id="opina" class="card border-primary  mb-2" style="max-width:12rem;">
									                        <div class="card">
									                            <div class="card-body">
									                                <div class="card-text">
									                                <a href="{{ path('opina_show', {'id': opina.id}) }}"><p class="card-text-2">{{ opina.pregunta }}</p></a>
									                                </div>
									                                <br>
									                                <h6><small> <id="fecha">Tienes de fecha hasta: {{ opina.fechahoralimite ? opina.fechahoralimite|date('d-m-Y') : '' }}</small></h6>
									                                
									                            </div>
									                        </div>
									                    </div>
													</div>
									                {% endfor %}
									            </div>
		                                  {% endfor %}
	                                </div>
							    </p>
						    <a href="#" class="card-link"></a>
						    <a href="{{ path('opina_index') }}" class="card-link">Ir a opiniones</a>
						  </div>
					   </div>
			  	   </div>
			    </div>
                <!--División de Bloque-->
			    <div class="w-100"><br></div>
                <!-- Bloque 3 Salud-->
                  <div class="row">
			        <div class="col">
			  	      <div class="card mb-2" >
						 <div class="card-body">
						    <h3 class="card-title">Salud</h3>
						    <p class="card-text">
						    	<!-- Card Salud-->
                               {% for row in saluds|batch(4) %}
								    <div class="row">
									      {% for salud in row %}
									        <div  class="col-sm-3">
									            <div class="card border-primary ">
									                <a href="{{salud.id}}">
									                   <img class="card-img-top" src="{{ asset(ruta_imagenes ~ salud.imagen.nombre) }}" alt="Card image cap">
									                <div class="card-body">
									                <p class="card-title">{{ salud.titulo}}</p></a>        
									                <div class="card-text">
									                  <h6><small><class="card-text">{{ salud.texto|slice(0, 100) }}</small></h6>
									                </div>
									                <div class="final">
									                  <h6><small> {{ salud.fechahora ? salud.fechahora|date('d-m-Y') : '' }}</small></h6> 
									                </div>                             
									            </div>
									        </div>
									        </div>
									      {% endfor %}
						            </div>
						 <br>
							    {% endfor %}
				            </p>
						    <a href="{{ path('salud_index') }}" class="card-link"></a>
						    <a href="{{ path('salud_index') }}" class="card-link">Ir a salud</a>
						  </div>
					    </div>
			        </div>
			    </div>   
                 <!--División de Bloque-->
			    <div class="w-100"><br></div>
                 <!-- Bloque 4 Eventos-->
			    <div class="row">
			       <div class="col">
			  	        <div class="card  mb-2" >
						  <div class="card-body">
						    <h3 class="card-title">Eventos</h3>
						    <p class="card-text">
						    	<!--Contenido de eventos-->
						    	Contenido por determinar
						    </p>
						    <a href="#" class="card-link"></a>
						    <a href="#" class="card-link">Ver eventos</a>
						  </div>
					    </div>
			        </div>
			    </div>
			    
	    </div>
	    <div class="col-md-3">
			<div class="card  mb-2">
			    <div class="card-body">
					Ayuntamientos <span class="float-right">{{ ayuntamientos|length }}</span>
					<br>
                    Vecinos <span class="float-right">{{ vecinos|length }}</span>
                    <br>
                    
			    </div>
		        <div class="centered">
				  <center>
				  	<label for="añadir"></label>
				  	<button type="button" class="btn btn-primary " text-aling="center">Añadir</button>
				  </center>
				</div>
			</div>
        <div class="w-100"><br></div>
			    <div class="row">
			       <div class="col">
			  	        <div class="card  mb-2" >
						  <div class="card-body">
						    <h3 class="card-title">Ir a:</h3>
						    <p class="card-text"></p>
						   <div class="centered">
				          </div>   
						  </div>
					    </div>
			        </div>
			    </div>

	    </div>
	</div>
</div>
  
{% endblock %}
