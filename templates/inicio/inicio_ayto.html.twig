												 <div id="contenido" class="card  mb-2" >
													<a href="{{ path('evento_show', {'id': evento.id}) }}"">
													<div class="card-body">
														<p class="card-title">{{ evento.titular}}</p></a>        
														<div class="card-text">
														<h6><small class="fecha_evento">{{ evento.fechahora ? evento.fechahora|date('d/m/Y') : '' }}</small></h6>
														</div>						
													</div>
												</div>
												</div>
											{% endfor %}
											</div>
											<br>
											<br>
										{% endfor %}
	                                </div>
						    </p>
							{% if is_granted('ROLE_AYTO') %}
				                <center><a id="nuevoevento" href="{{ path('evento_new') }}"><i class="far fa-edit"></i> Crea eventos</a></center>
				             {% endif %}
						  </div>
					   </div>
			  	   </div>
			    </div> 
